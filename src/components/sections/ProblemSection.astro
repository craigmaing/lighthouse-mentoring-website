---
import { 
  TrendingDown, 
  AlertTriangle, 
  Users, 
  Calendar,
  Brain,
  UserX,
  Activity,
  BarChart3
} from 'lucide-astro';

const stats = [
  { 
    value: '£51bn', 
    label: 'Annual Cost to Employers', 
    description: 'Poor mental health costs UK businesses yearly',
    icon: TrendingDown,
    severity: 'critical',
    source: 'Deloitte UK, 2024',
    trend: '+12% from 2023',
    color: 'red'
  },
  { 
    value: '43%', 
    label: 'Report Anxiety', 
    description: 'Employees experienced anxiety in past year',
    icon: Users,
    severity: 'high',
    source: 'CIPD Health & Wellbeing Report, 2025',
    trend: 'Up 8% year-on-year',
    color: 'amber'
  },
  { 
    value: '41%', 
    label: 'Leading Absence Cause', 
    description: 'Mental ill health drives workplace absences',
    icon: Brain,
    severity: 'high',
    source: 'CIPD/Simplyhealth, 2025',
    trend: 'Now #1 cause',
    color: 'amber'
  },
  { 
    value: '£21.6bn', 
    label: 'Economic Impact', 
    description: 'Annual cost of workplace ill health to UK',
    icon: Calendar,
    severity: 'critical',
    source: 'HSE Statistics, 2024',
    trend: 'Rising annually',
    color: 'red'
  }
];

const warningSignsData = [
  { 
    icon: Activity, 
    title: 'Rising Absences', 
    description: 'Mental health is top absence cause',
    impact: 'High',
    stat: '41%'
  },
  { 
    icon: UserX, 
    title: 'Staff Turnover', 
    description: 'Turnover costs increased 150% since 2019',
    impact: 'Critical',
    stat: '£22.4bn'
  },
  { 
    icon: TrendingDown, 
    title: 'Presenteeism', 
    description: 'Working while unwell costs billions',
    impact: 'High',
    stat: '£24bn'
  },
  { 
    icon: AlertTriangle, 
    title: 'Work Pressure', 
    description: 'Employees under excessive pressure',
    impact: 'Medium',
    stat: '21%'
  },
  { 
    icon: Brain, 
    title: 'Mental Health Impact', 
    description: 'Work negatively affects mental health',
    impact: 'Critical',
    stat: '25%'
  },
  { 
    icon: BarChart3, 
    title: 'Manager Confidence', 
    description: 'Managers lack mental health training',
    impact: 'Medium',
    stat: '71%'
  }
];
---

<section id="problem" class="section relative bg-gradient-to-br from-gray-50 via-white to-red-50/20 overflow-hidden">
  <div class="container">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 left-0 w-96 h-96 bg-red-500 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-orange-500 rounded-full filter blur-3xl"></div>
    </div>
    
    <!-- Section Header -->
    <div class="text-center mb-12 relative z-10">
      <h2 class="text-3xl md:text-5xl font-bold text-gray-900 mb-4">Why Your Organization Needs a Workplace Wellbeing Assessment</h2>
      <p class="text-base md:text-lg text-gray-700 max-w-3xl mx-auto leading-relaxed">
        UK businesses lose <span class="font-bold text-red-600">£51 billion annually</span> to poor mental health. A comprehensive wellbeing audit 
        identifies the real costs and provides data-driven solutions. Transform workplace challenges into competitive advantages with our employee wellness assessment.
      </p>
    </div>

    <!-- Statistics Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16 relative z-10">
      {stats.map((stat, index) => (
        <div class="group relative bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-t-4 border-red-500 overflow-hidden">
          <!-- Background Gradient -->
          <div class="absolute inset-0 bg-gradient-to-br from-red-50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
          
          <!-- Icon -->
          <div class="relative flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
              <stat.icon class="w-6 h-6 text-red-600" />
            </div>
            {stat.trend && (
              <span class="text-xs font-semibold text-red-600 bg-red-50 px-2 py-1 rounded-full">
                {stat.trend}
              </span>
            )}
          </div>
          
          <!-- Value with Animation -->
          <div class="relative">
            <div class="text-4xl font-bold text-gray-900 mb-2 stat-value">
              {stat.value}
            </div>
            <div class="text-gray-900 font-semibold mb-1">{stat.label}</div>
            <div class="text-sm text-gray-600 mb-3">{stat.description}</div>
            
            <!-- Source Badge -->
            <div class="flex items-center gap-1">
              <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-xs text-gray-500">{stat.source}</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Warning Signs Section -->
    <div class="relative bg-white rounded-3xl shadow-xl p-8 md:p-10 border border-gray-100 overflow-hidden">
      <!-- Alert Banner -->
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-red-500 via-orange-500 to-yellow-500"></div>
      
      <div class="grid lg:grid-cols-2 gap-12 items-start relative z-10">
        <!-- Content Side -->
        <div>
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center animate-pulse">
              <AlertTriangle class="w-6 h-6 text-red-600" />
            </div>
            Critical Warning Signs
          </h3>
          <p class="text-base text-gray-700 mb-6 leading-relaxed">
            Our workplace wellbeing assessment helps identify these critical indicators before they impact your bottom line. 
            Early detection through professional audits enables proactive intervention.
          </p>
          <div class="space-y-4 mb-6">
            <div class="flex items-start gap-3 p-3 bg-orange-50 rounded-lg border-l-4 border-orange-500">
              <svg class="w-5 h-5 text-orange-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
              <div>
                <span class="font-semibold text-gray-900">43% of employees</span>
                <span class="text-gray-700"> experienced workplace anxiety in 2024</span>
              </div>
            </div>
            <div class="flex items-start gap-3 p-3 bg-red-50 rounded-lg border-l-4 border-red-500">
              <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <span class="font-semibold text-gray-900">Mental health</span>
                <span class="text-gray-700"> is now the #1 cause of absence (41%)</span>
              </div>
            </div>
            <div class="flex items-start gap-3 p-3 bg-green-50 rounded-lg border-l-4 border-green-500">
              <svg class="w-5 h-5 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <span class="font-semibold text-gray-900">£4.70 return</span>
                <span class="text-gray-700"> for every £1 invested in wellbeing</span>
              </div>
            </div>
          </div>
          <p class="text-base text-gray-700">
            A professional wellbeing audit using AI-powered analysis helps transform these challenges into opportunities for sustainable growth and improved employee wellness.
          </p>
        </div>

        <!-- Warning Signs Grid -->
        <div>
          <h4 class="font-bold text-gray-900 text-lg mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Key Risk Indicators
          </h4>
          <div class="grid grid-cols-1 gap-3">
            {warningSignsData.slice(0, 4).map((sign, index) => (
              <div class="group relative bg-white rounded-xl p-4 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 hover:border-red-200 overflow-hidden">
                <!-- Hover Effect -->
                <div class="absolute inset-0 bg-gradient-to-r from-red-50 to-orange-50 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                
                <div class="relative flex items-center justify-between">
                  <div class="flex items-start gap-3">
                    <div class="w-10 h-10 bg-red-50 rounded-lg flex items-center justify-center flex-shrink-0">
                      <sign.icon class="w-5 h-5 text-red-600" />
                    </div>
                    <div>
                      <h5 class="font-semibold text-gray-900 group-hover:text-red-700 transition-colors">{sign.title}</h5>
                      <p class="text-sm text-gray-600">{sign.description}</p>
                    </div>
                  </div>
                  {sign.stat && (
                    <div class="text-right">
                      <span class="text-2xl font-bold text-red-600">{sign.stat}</span>
                      <div class="text-xs text-gray-500 uppercase tracking-wide">{sign.impact}</div>
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
          
          <div class="mt-6 p-5 bg-gradient-to-r from-red-50 to-orange-50 border-2 border-red-200 rounded-xl">
            <div class="flex items-start gap-3">
              <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0 animate-pulse">
                <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-bold text-gray-900 mb-1">
                  Multiple warning signs detected?
                </p>
                <p class="text-sm text-gray-700">
                  A professional wellbeing audit can identify root causes and provide actionable solutions before costs spiral.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-12 relative z-10">
      <p class="text-lg font-semibold text-gray-900 mb-4">Don't wait for the crisis to hit</p>
      <a href="#assessment" class="group inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-gradient-to-r from-red-600 to-orange-600 hover:from-red-700 hover:to-orange-700 rounded-lg shadow-lg transform hover:scale-105 transition-all duration-300">
        Get Your Assessment Now
        <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      <p class="text-sm text-gray-600 mt-3">Join 100+ UK businesses taking action on workplace wellbeing</p>
    </div>
  </div>
</section>

<style>
  /* Enhanced visual styles */
  
  /* Animated statistics */
  .stat-value {
    animation: countUp 2s ease-out;
  }
  
  @keyframes countUp {
    from {
      opacity: 0;
      transform: scale(0.5);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Progressive reveal animations */
  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }

  .reveal-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .fade-in-left {
    animation: fadeInLeft 0.8s ease-out forwards;
  }

  .fade-in-right {
    animation: fadeInRight 0.8s ease-out forwards;
    animation-delay: 0.2s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Stagger animation for stats */
  .stat-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .stat-card:nth-child(1) { animation-delay: 0.1s; }
  .stat-card:nth-child(2) { animation-delay: 0.2s; }
  .stat-card:nth-child(3) { animation-delay: 0.3s; }
  .stat-card:nth-child(4) { animation-delay: 0.4s; }

  .warning-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  /* Pulse animation for critical alerts */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
</style>

<script>
  // Progressive reveal on scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, observerOptions);

  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.reveal-on-scroll');
    elements.forEach(el => observer.observe(el));
  });
</script>