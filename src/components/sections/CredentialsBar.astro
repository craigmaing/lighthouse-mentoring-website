---
// Professional credentials and badges
const credentials = [
  {
    title: 'FRSPH',
    subtitle: 'Fellow',
    description: 'Royal Society for Public Health'
  },
  {
    title: 'FCMI',
    subtitle: 'Fellow',
    description: 'Chartered Management Institute'
  },
  {
    title: 'IoD',
    subtitle: 'Ambassador',
    description: 'Institute of Directors'
  },
  {
    title: '17+',
    subtitle: 'Years Experience',
    description: 'Workplace Wellbeing'
  },
  {
    title: 'ISO 45003',
    subtitle: 'Certified',
    description: 'Mental Health Standards'
  }
];
---

<section class="relative py-8 mt-8 bg-gradient-to-r from-primary-900 via-primary-800 to-primary-900 overflow-hidden" aria-label="Professional Credentials for Workplace Wellbeing Assessment">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.5"%3E%3Cpath d="M0 38.59l2.83-2.83 1.41 1.41L1.41 40H0v-1.41zM0 1.4l2.83 2.83 1.41-1.41L1.41 0H0v1.41zM38.59 40l-2.83-2.83 1.41-1.41L40 38.59V40h-1.41zM40 1.41l-2.83 2.83-1.41-1.41L38.59 0H40v1.41zM20 18.6l2.83-2.83 1.41 1.41L21.41 20l2.83 2.83-1.41 1.41L20 21.41l-2.83 2.83-1.41-1.41L18.59 20l-2.83-2.83 1.41-1.41L20 18.59z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"></div>
  </div>
  
  <!-- Shimmer effect -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent shimmer"></div>
  </div>

  <div class="container relative z-10">
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
      {credentials.map((credential, index) => (
        <div 
          class="text-center text-white group hover:scale-110 transition-transform duration-300"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="credential-item">
            <div class="text-2xl md:text-3xl font-bold mb-1 text-white drop-shadow-lg">
              {credential.title}
            </div>
            <p class="text-sm font-medium text-primary-100 mb-1">
              {credential.subtitle}
            </p>
            <p class="text-xs text-primary-200">
              {credential.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .credential-item {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .shimmer {
    animation: shimmer 3s ease-in-out infinite;
  }
  
  @keyframes shimmer {
    0%, 100% {
      transform: translateX(-100%);
    }
    50% {
      transform: translateX(100%);
    }
  }
</style>