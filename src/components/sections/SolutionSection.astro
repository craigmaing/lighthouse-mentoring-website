                <p class="text-sm text-gray-600 mb-4 flex-grow">{item.lighthouse.description}</p>
                <div class="flex items-center gap-2 text-green-600 text-sm font-medium mt-auto">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>{item.lighthouse.impact}</span>
