    <!-- CTA Section -->
    <div class="text-center mt-12">
      <p class="text-lg text-gray-700 mb-6">Ready to transform your workplace wellbeing with data-driven insights?</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/wellbeing-audit-process" class="btn-outline">Learn About Our Process</a>
        <a href="#assessment" class="btn-primary">Get Free Assessment</a>
      </div>
    </div>
