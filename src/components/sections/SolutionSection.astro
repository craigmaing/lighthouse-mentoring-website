---
import { 
  Brain, 
  LineChart, 
  Users, 
  Target,
  Sparkles,
  ChartBar,
  Shield,
  Zap
} from 'lucide-astro';

// Data for the comparison section
const differentiators = [
  {
    traditional: {
      title: "Annual Surveys",
      description: "Once-a-year snapshots miss critical changes throughout the year",
      impact: "Reactive, not preventive"
    },
    lighthouse: {
      title: "Continuous Monitoring",
      description: "Regular pulse checks track wellbeing trends as they develop",
      impact: "Early intervention possible"
    }
  },
  {
    traditional: {
      title: "Generic Questions", 
      description: "One-size-fits-all templates ignore your specific context",
      impact: "Low engagement rates"
    },
    lighthouse: {
      title: "Tailored Assessment",
      description: "Questions customised to your industry, size, and unique challenges",
      impact: "Higher relevance & response"
    }
  },
  {
    traditional: {
      title: "Surface-Level Data",
      description: "Basic averages and percentages without deeper analysis",
      impact: "Limited insights"
    },
    lighthouse: {
      title: "Pattern Recognition",
      description: "AI identifies hidden correlations between wellbeing and performance", 
      impact: "Actionable recommendations"
    }
  },
  {
    traditional: {
      title: "Generic Solutions",
      description: "Standard recommendations that could apply to any organisation",
      impact: "Poor implementation rates"
    },
    lighthouse: {
      title: "Bespoke Strategy",
      description: "Interventions designed for your specific culture and goals",
      impact: "Practical & achievable"
    }
  }
];

const assessmentAreas = [
  { icon: Brain, title: "Mental Health", description: "Assess stress and psychological safety", color: "primary" },
  { icon: Users, title: "Team Culture", description: "Evaluate dynamics and engagement", color: "accent" },
  { icon: ChartBar, title: "Data Analysis", description: "AI-powered pattern recognition", color: "primary" },
  { icon: Target, title: "Action Plan", description: "Prioritized recommendations", color: "accent" }
];
---

<section id="solution" class="section relative bg-gradient-to-br from-white via-primary-50/10 to-accent-50/10 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 right-0 w-96 h-96 bg-primary-500 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-20 left-0 w-96 h-96 bg-accent-500 rounded-full filter blur-3xl"></div>
  </div>
  
  <!-- Animated Grid Pattern -->
  <div class="absolute inset-0 opacity-[0.02]">
    <div class="h-full w-full" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" xmlns="http://www.w3.org/2000/svg"%3E%3Cdefs%3E%3Cpattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse"%3E%3Cpath d="M 60 0 L 0 0 0 60" fill="none" stroke="gray" stroke-width="1"/%3E%3C/pattern%3E%3C/defs%3E%3Crect width="100%25" height="100%25" fill="url(%23grid)"/%3E%3C/svg%3E');"></div>
  </div>

  <div class="container relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-5xl font-bold text-gray-900 mb-4">
        AI-Powered <span class="text-gradient bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-transparent">Workplace Wellbeing</span> Audit Services
      </h2>
      <p class="text-base md:text-lg text-gray-700 max-w-3xl mx-auto leading-relaxed">
        Our comprehensive wellbeing audit combines <span class="font-semibold">AI-powered analysis</span> with human expertise to deliver actionable insights. 
        Transform your workplace culture with data-driven employee wellness assessments that identify patterns traditional surveys miss.
      </p>
    </div>

    <!-- What is a Workplace Wellbeing Audit -->
    <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
      <div class="order-2 lg:order-1">
        <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm font-semibold mb-4">
          <Sparkles class="w-4 h-4" />
          The Solution
        </div>
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">What is a Workplace Wellbeing Audit?</h3>
        <p class="text-base text-gray-700 mb-6 leading-relaxed">
          A workplace wellbeing assessment is a systematic evaluation of your organization's employee wellness ecosystem. 
          Our wellbeing audit process examines mental health, engagement, productivity, and culture using AI-powered analysis.
        </p>
        <ul class="space-y-4">
          <li class="flex items-start gap-3 p-3 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <span class="font-semibold text-gray-900">Analyze</span>
              <span class="text-gray-700"> stress levels and team dynamics</span>
            </div>
          </li>
          <li class="flex items-start gap-3 p-3 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <span class="font-semibold text-gray-900">Identify</span>
              <span class="text-gray-700"> patterns traditional surveys miss</span>
            </div>
          </li>
          <li class="flex items-start gap-3 p-3 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <span class="font-semibold text-gray-900">Provide</span>
              <span class="text-gray-700"> prioritized, actionable recommendations</span>
            </div>
          </li>
          <li class="flex items-start gap-3 p-3 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
              <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <span class="font-semibold text-gray-900">Deliver</span>
              <span class="text-gray-700"> measurable ROI improvements</span>
            </div>
          </li>
        </ul>
      </div>
      
      <div class="order-1 lg:order-2">
        <div class="grid grid-cols-2 gap-4">
          {assessmentAreas.map((area, index) => (
            <div class="group relative bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden assessment-card" style={`animation-delay: ${index * 0.1}s`}>
              <!-- Gradient overlay on hover -->
              <div class="absolute inset-0 bg-gradient-to-br from-primary-50 to-accent-50 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              
              <div class="relative z-10">
                <div class={`w-12 h-12 bg-gradient-to-br ${area.color === 'primary' ? 'from-primary-400 to-primary-600' : 'from-accent-400 to-accent-600'} rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform`}>
                  <area.icon class="w-6 h-6 text-white" />
                </div>
                <h4 class="font-bold text-gray-900 mb-2">{area.title}</h4>
                <p class="text-sm text-gray-600">{area.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- AI + Human Expertise Section -->
    <div class="mb-16 relative">
      <div class="text-center mb-12">
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">Our AI-Powered Wellbeing Assessment Methodology</h3>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Three pillars of excellence working together to transform your workplace
        </p>
      </div>
      
      <!-- Connecting Lines SVG -->
      <svg class="absolute inset-0 w-full h-full pointer-events-none hidden lg:block" style="z-index: 0;">
        <path d="M 25% 50% Q 50% 20% 75% 50%" stroke="url(#gradient)" stroke-width="2" fill="none" opacity="0.2" stroke-dasharray="5,5" />
        <defs>
          <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#3b9ac9;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#ffd954;stop-opacity:1" />
          </linearGradient>
        </defs>
      </svg>
      
      <div class="grid md:grid-cols-3 gap-8 relative z-10">
        <div class="text-center group methodology-card">
          <div class="relative inline-block mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl flex items-center justify-center mx-auto transform group-hover:rotate-6 transition-transform duration-300">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="absolute -top-2 -right-2 w-6 h-6 bg-accent-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xs font-bold">1</span>
            </div>
          </div>
          <h4 class="font-bold text-lg text-gray-900 mb-3">AI-Powered Analysis</h4>
          <p class="text-sm text-gray-600 leading-relaxed">Our workplace wellbeing audit uses advanced algorithms to process employee wellness data, identifying patterns that traditional assessments miss.</p>
        </div>
        
        <div class="text-center group methodology-card" style="animation-delay: 0.2s;">
          <div class="relative inline-block mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-accent-500 to-accent-600 rounded-2xl flex items-center justify-center mx-auto transform group-hover:rotate-6 transition-transform duration-300">
              <LineChart class="w-10 h-10 text-white" />
            </div>
            <div class="absolute -top-2 -right-2 w-6 h-6 bg-primary-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xs font-bold">2</span>
            </div>
          </div>
          <h4 class="font-bold text-lg text-gray-900 mb-3">Pattern Recognition</h4>
          <p class="text-sm text-gray-600 leading-relaxed">Our employee wellness audit reveals hidden connections between workplace wellbeing, productivity, and ROI using sophisticated AI analysis.</p>
        </div>
        
        <div class="text-center group methodology-card" style="animation-delay: 0.4s;">
          <div class="relative inline-block mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-primary-400 to-primary-600 rounded-2xl flex items-center justify-center mx-auto transform group-hover:rotate-6 transition-transform duration-300">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div class="absolute -top-2 -right-2 w-6 h-6 bg-accent-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xs font-bold">3</span>
            </div>
          </div>
          <h4 class="font-bold text-lg text-gray-900 mb-3">Human Expertise</h4>
          <p class="text-sm text-gray-600 leading-relaxed">Craig Fearn FRSPH, Fellow CMI ensures insights are contextualised, practical, and aligned with your organisation's unique culture and objectives.</p>
        </div>
      </div>
    </div>

    <!-- Key Differentiators - Enhanced Comparison -->
    <div class="bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 md:p-10 shadow-xl border border-gray-100 overflow-hidden relative">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute -top-10 -right-10 w-40 h-40 bg-secondary-500 rounded-full"></div>
        <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-primary-500 rounded-full"></div>
      </div>
      
      <div class="relative z-10">
        <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">
          <span class="text-secondary-600">Traditional</span> vs <span class="text-primary-600">Lighthouse</span> Approach
        </h3>
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Traditional Column -->
          <div class="relative">
            <div class="absolute -left-4 top-0 bottom-0 w-1 bg-gradient-to-b from-red-400 to-red-600 rounded-full"></div>
            <h4 class="font-bold text-xl text-gray-900 mb-6 flex items-center gap-2">
              <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </div>
              Traditional Surveys
            </h4>
            <ul class="space-y-4">
              <li class="flex items-start gap-3 p-3 bg-red-50 rounded-lg border-l-4 border-red-300">
                <span class="text-red-600 text-xl">✗</span>
                <div>
                  <span class="font-semibold text-gray-900 block">Annual snapshots</span>
                  <span class="text-sm text-gray-600">Miss critical changes throughout the year</span>
                </div>
              </li>
              <li class="flex items-start gap-3 p-3 bg-red-50 rounded-lg border-l-4 border-red-300">
                <span class="text-red-600 text-xl">✗</span>
                <div>
                  <span class="font-semibold text-gray-900 block">Generic questions</span>
                  <span class="text-sm text-gray-600">One-size-fits-all approach lacks context</span>
                </div>
              </li>
              <li class="flex items-start gap-3 p-3 bg-red-50 rounded-lg border-l-4 border-red-300">
                <span class="text-red-600 text-xl">✗</span>
                <div>
                  <span class="font-semibold text-gray-900 block">Surface-level data</span>
                  <span class="text-sm text-gray-600">Basic percentages without deeper analysis</span>
                </div>
              </li>
              <li class="flex items-start gap-3 p-3 bg-red-50 rounded-lg border-l-4 border-red-300">
                <span class="text-red-600 text-xl">✗</span>
                <div>
                  <span class="font-semibold text-gray-900 block">Generic solutions</span>
                  <span class="text-sm text-gray-600">Standard recommendations for every organization</span>
                </div>
              </li>
            </ul>
          </div>
          
          <!-- Lighthouse Column -->
          <div class="relative">
            <div class="absolute -left-4 top-0 bottom-0 w-1 bg-gradient-to-b from-primary-400 to-primary-600 rounded-full"></div>
            <h4 class="font-bold text-xl text-gray-900 mb-6 flex items-center gap-2">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
                <Shield class="w-6 h-6 text-primary-600" />
              </div>
              Our Wellbeing Audits
            </h4>
            <ul class="space-y-4">
              <li class="flex items-start gap-3 p-3 bg-primary-50 rounded-lg border-l-4 border-primary-300">
                <span class="text-primary-600 text-xl">✓</span>
                <div>
                  <span class="font-semibold text-gray-900 block">Continuous monitoring</span>
                  <span class="text-sm text-gray-600">Regular pulse checks track evolving trends</span>
                </div>
              </li>
              <li class="flex items-start gap-3 p-3 bg-primary-50 rounded-lg border-l-4 border-primary-300">
                <span class="text-primary-600 text-xl">✓</span>
                <div>
                  <span class="font-semibold text-gray-900 block">Tailored assessment</span>
                  <span class="text-sm text-gray-600">Customized to your industry and challenges</span>
                </div>
              </li>
              <li class="flex items-start gap-3 p-3 bg-primary-50 rounded-lg border-l-4 border-primary-300">
                <span class="text-primary-600 text-xl">✓</span>
                <div>
                  <span class="font-semibold text-gray-900 block">AI pattern recognition</span>
                  <span class="text-sm text-gray-600">Uncover hidden correlations and insights</span>
                </div>
              </li>
              <li class="flex items-start gap-3 p-3 bg-primary-50 rounded-lg border-l-4 border-primary-300">
                <span class="text-primary-600 text-xl">✓</span>
                <div>
                  <span class="font-semibold text-gray-900 block">Bespoke strategies</span>
                  <span class="text-sm text-gray-600">Action plans designed for your specific culture</span>
                </div>
              </li>
            </ul>
          </div>
        </div>
        
        <!-- Center Badge -->
        <div class="flex justify-center mt-8">
          <div class="bg-gradient-to-r from-primary-600 to-accent-600 text-white px-6 py-3 rounded-full font-semibold flex items-center gap-2 shadow-lg">
            <Zap class="w-5 h-5" />
            AI-Powered Analysis for Better Results
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <p class="text-lg font-semibold text-gray-900 mb-6">Ready to transform workplace challenges into opportunities?</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#process-overview" class="group inline-flex items-center justify-center px-8 py-4 text-base font-medium text-primary-600 bg-white border-2 border-primary-300 hover:border-primary-400 rounded-lg shadow-sm hover:shadow-md transition-all duration-300">
          Learn Our Process
          <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="#assessment" class="group inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 rounded-lg shadow-lg transform hover:scale-105 transition-all duration-300">
          Start Your Assessment
          <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Gradient text animation */
  .text-gradient {
    background-size: 200% auto;
    animation: gradient-shift 3s ease infinite;
  }
  
  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Card animations */
  .assessment-card {
    opacity: 0;
    animation: slideInUp 0.6s ease-out forwards;
  }
  
  .methodology-card {
    opacity: 0;
    animation: fadeInScale 0.8s ease-out forwards;
  }
  
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>