---
---

<section class="section relative overflow-hidden">
  <!-- Background Image Layer -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/lighthouse-human-ai-connection.png" 
      alt="AI and human collaboration in workplace wellbeing analysis" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-primary-50/80 to-white/70"></div>
  </div>
  
  <div class="container relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="animate-fade-in">
        <div class="flex items-center gap-2 mb-6">
          <span class="inline-flex px-3 py-1 text-sm font-medium text-primary-900 bg-white/90 rounded-full">
            Data-Driven Insights
          </span>
          <span class="inline-flex px-3 py-1 text-sm font-medium text-secondary-900 bg-white/90 rounded-full">
            Human-Centered Approach
          </span>
        </div>
        
        <h1 class="text-gray-900 mb-6">
          Transform Your Workplace Culture with 
          <span class="text-gradient">Wellbeing Audits</span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8">
          Unlock your team's potential with comprehensive <a href="/workplace-wellbeing-assessment" class="text-primary-600 hover:text-primary-700 underline">workplace wellbeing assessments</a>. 
          Get actionable insights that drive measurable improvements in employee engagement, 
          productivity, and retention.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a href="#assessment" class="btn-primary">
            Get Your Free Assessment
          </a>
          <a href="/wellbeing-audit-process" class="btn-outline">
            Learn How It Works
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="flex items-center gap-6 flex-wrap">
          <div class="flex items-center gap-3">
            <img src="/iod-badge.png" alt="Institute of Directors Ambassador Badge - Craig Fearn" class="h-12 w-auto" />
            <div>
              <p class="text-sm font-semibold text-gray-900">IoD Ambassador</p>
              <p class="text-xs text-gray-600">Institute of Directors</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <img src="/rsph-badge.jpg" alt="Royal Society for Public Health Fellow Badge - Craig Fearn" class="h-12 w-auto" />
            <div>
              <p class="text-sm font-semibold text-gray-900">Fellow RSPH</p>
              <p class="text-xs text-gray-600">Royal Society for Public Health</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Image/Visual -->
      <div class="relative">
        <div class="relative z-10">
          <img 
            src="/iod-conference-aerospace.jpg" 
            alt="Craig Fearn speaking at IoD Conference at Aerospace Bristol" 
            class="rounded-2xl shadow-2xl w-full object-cover"
          />
          <div class="absolute -bottom-6 -left-6 bg-white rounded-xl shadow-lg p-4 max-w-xs">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Proven Track Record</p>
                <p class="text-sm text-gray-600">Measurable wellbeing improvements</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Background decoration -->
        <div class="absolute inset-0 bg-gradient-to-br from-primary-200 to-secondary-200 rounded-2xl transform rotate-3 scale-105 opacity-20"></div>
      </div>
    </div>
  </div>
</section>