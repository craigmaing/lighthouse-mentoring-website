---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
import PageHero from '../components/sections/PageHero.astro';
import CredentialsBar from '../components/sections/CredentialsBar.astro';

const title = 'Craig Fearn - Workplace Culture Assessment Expert | Staff Wellbeing Survey Specialist UK';
const description = 'Craig Fearn FRSPH specializes in workplace culture assessment and staff wellbeing surveys. UK\'s leading AI-powered wellbeing consultant with 17+ years transforming corporate cultures. ISO 45003 certified.';

const credentials = [
  { title: 'Fellow', org: 'Royal Society for Public Health', year: 'Dec 2024' },
  { title: 'Fellow', org: 'Chartered Management Institute', year: 'Current' },
  { title: 'Principal Practitioner', org: 'Association of Business Psychology', year: 'Oct 2019' },
  { title: 'Senior Member', org: 'European Mentoring & Coaching Council', year: 'Mar 2009' },
  { title: 'Senior Member', org: 'Association for Coaching', year: 'Sep 2019' },
  { title: 'Ambassador', org: 'Institute of Directors', year: 'Current' }
];

const awards = [
  { title: 'Aspiring Director Finalist', org: 'Institute of Directors', year: '2025' },
  { title: 'Global Director Finalist', org: 'Institute of Directors', year: '2025' },
  { title: 'CREA Global Award', org: 'Brainz Magazine', year: 'Creative & Innovative Ideas in Mental Health' },
  { title: 'Brainz 500 Global Award', org: 'Brainz Magazine', year: 'Entrepreneurial Success' }
];

const expertise = [
  'Executive Coaching & Mentoring',
  'Workplace Wellbeing Audits',
  'ISO 45003 Implementation',
  'Mental Health First Aid (MHFA England Instructor)',
  'ASIST (Applied Suicide Intervention Skills)',
  'Stress & Burnout Prevention',
  'Leadership Development',
  'Organizational Psychology',
  'Executive Wellbeing Counsel',
  'ROI & VOI Measurement'
];

const mediaAppearances = [
  {
    type: 'Podcast',
    title: 'WFM Unfiltered',
    description: 'Mental Health in Contact Centers - 2-part series',
    year: '2024'
  },
  {
    type: 'Interview',
    title: 'Authority Magazine',
    description: 'Navigating Political Opinions in the Workplace',
    year: '2024'
  },
  {
    type: 'Webinar',
    title: 'TMAC.ai',
    description: 'AI Would Agree: Sustainable Mental Health',
    year: '2024'
  }
];

const clientLogos = [
  'Cornish Lithium',
  'Edrington UK',
  'Brown-Forman',
  'Suntory',
  'Soho House',
  'Global Switch',
  'Healthy Hospo',
  'Furniss of Cornwall',
  'Book of Beasties'
];
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <!-- Hero Section -->
    <div class="relative bg-white">
      <PageHero 
        title="Meet Craig Fearn FRSPH, FCMI"
        subtitle="UK's Leading Workplace Culture Assessment Expert"
        description="Pioneering AI-powered workplace culture assessment and staff wellbeing surveys across the UK. Fellow of both the Royal Society for Public Health and Chartered Management Institute, Craig delivers employee satisfaction assessments that reduce workplace stress by 40% and boost engagement by 25%."
        ctaText="Book Your Assessment"
        ctaLink="/contact"
        secondaryCtaText="Connect on LinkedIn"
        secondaryCtaLink="https://www.linkedin.com/in/craigfearn/"
        heroImage="/iod-conference-aerospace.jpg"
        heroImageAlt="Craig Fearn FRSPH, Fellow CMI - Speaking at IoD Conference"
      />
    </div>
    
    <!-- Credentials Bar (stands alone as a separator) -->
    <CredentialsBar />
    
    <!-- Section 1: Professional Excellence -->
    <div class="relative">
      <section class="section bg-gradient-to-br from-white via-primary-50/20 to-accent-50/10">
        <div class="container">
          <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
              <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                Professional Excellence & Recognition
              </h2>
              <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Internationally recognised credentials and awards that demonstrate commitment to workplace wellbeing excellence
              </p>
            </div>
            
            <!-- Awards Showcase -->
            <div class="bg-white rounded-3xl shadow-xl p-8 mb-12">
              <h3 class="text-2xl font-bold text-gray-900 text-center mb-8">2025 Institute of Directors Awards</h3>
              <div class="grid md:grid-cols-2 gap-8">
                <div class="group relative bg-gradient-to-br from-primary-50 to-white rounded-2xl p-6 border border-primary-100 hover:shadow-lg transition-all">
                  <div class="absolute -top-3 -right-3">
                    <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-500 rounded-full flex items-center justify-center shadow-lg">
                      <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    </div>
                  </div>
                  <img src="/iod-global-finalist.png" alt="IoD Global Director Finalist" class="w-full max-w-xs mx-auto h-auto mb-4" />
                  <h4 class="text-lg font-bold text-gray-900 text-center mb-2">Global Director Finalist</h4>
                  <p class="text-sm text-gray-600 text-center">Recognising exceptional international leadership and vision</p>
                </div>
                
                <div class="group relative bg-gradient-to-br from-accent-50 to-white rounded-2xl p-6 border border-accent-100 hover:shadow-lg transition-all">
                  <div class="absolute -top-3 -right-3">
                    <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-500 rounded-full flex items-center justify-center shadow-lg">
                      <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    </div>
                  </div>
                  <img src="/iod-aspiring-finalist.png" alt="IoD Aspiring Director Finalist" class="w-full max-w-xs mx-auto h-auto mb-4" />
                  <h4 class="text-lg font-bold text-gray-900 text-center mb-2">Aspiring Director Finalist</h4>
                  <p class="text-sm text-gray-600 text-center">Excellence in emerging business leadership</p>
                </div>
              </div>
            </div>
            
            <!-- Professional Credentials Grid -->
            <div class="grid lg:grid-cols-3 gap-8 mb-12">
              <!-- Fellowships Card -->
              <div class="bg-white rounded-2xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                <div class="flex items-center gap-3 mb-6">
                  <div class="w-12 h-12 bg-gradient-to-br from-primary-100 to-primary-200 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"></path>
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900">Fellowships</h3>
                </div>
                
                <div class="space-y-4">
                  <div class="flex items-center gap-3 p-3 bg-primary-50 rounded-lg">
                    <img src="/rsph-badge.jpg" alt="RSPH" class="h-12 w-auto" />
                    <div>
                      <p class="font-semibold text-gray-900 text-sm">Fellow RSPH</p>
                      <p class="text-xs text-gray-600">Royal Society for Public Health</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center gap-3 p-3 bg-accent-50 rounded-lg">
                    <div class="w-12 h-12 bg-accent-200 rounded-lg flex items-center justify-center">
                      <span class="text-accent-700 font-bold text-sm">CMI</span>
                    </div>
                    <div>
                      <p class="font-semibold text-gray-900 text-sm">Fellow CMI</p>
                      <p class="text-xs text-gray-600">Chartered Management Institute</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Professional Roles Card -->
              <div class="bg-white rounded-2xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                <div class="flex items-center gap-3 mb-6">
                  <div class="w-12 h-12 bg-gradient-to-br from-accent-100 to-accent-200 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-accent-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                      <path d="M2 13.692V16a2 2 0 002 2h12a2 2 0 002-2v-2.308A24.974 24.974 0 0110 15c-2.796 0-5.487-.46-8-1.308z"></path>
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900">Leadership Roles</h3>
                </div>
                
                <ul class="space-y-3">
                  <li class="flex items-start gap-2">
                    <img src="/iod-badge.png" alt="IoD" class="h-8 w-auto mt-0.5" />
                    <div>
                      <p class="font-semibold text-gray-900 text-sm">IoD Ambassador</p>
                      <p class="text-xs text-gray-600">Institute of Directors</p>
                    </div>
                  </li>
                  <li class="flex items-start gap-2">
                    <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                      <span class="text-green-700 font-bold text-xs">SM</span>
                    </div>
                    <div>
                      <p class="font-semibold text-gray-900 text-sm">Senior Member</p>
                      <p class="text-xs text-gray-600">European Mentoring & Coaching Council</p>
                    </div>
                  </li>
                </ul>
              </div>
              
              <!-- Expertise Card -->
              <div class="bg-gradient-to-br from-primary-50 to-accent-50 rounded-2xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                <div class="flex items-center gap-3 mb-6">
                  <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-md">
                    <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z" clip-rule="evenodd"></path>
                      <path d="M15 7h1a2 2 0 012 2v5.5a1.5 1.5 0 01-3 0V7z"></path>
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900">Core Expertise</h3>
                </div>
                
                <div class="grid grid-cols-1 gap-2">
                  {expertise.slice(0, 6).map((item) => (
                    <div class="flex items-center gap-2 bg-white/80 backdrop-blur px-3 py-2 rounded-lg">
                      <svg class="w-4 h-4 text-primary-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-sm text-gray-700">{item}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
            
            <!-- Bottom Stats Bar -->
            <div class="bg-gradient-to-r from-primary-600 to-accent-600 rounded-2xl p-6 text-white">
              <div class="grid grid-cols-2 gap-6 text-center">
                <div>
                  <p class="text-3xl font-bold">17+</p>
                  <p class="text-sm opacity-90">Years Experience</p>
                </div>
                <div>
                  <p class="text-3xl font-bold">2</p>
                  <p class="text-sm opacity-90">Fellowships</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-white to-gray-50">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 2: Philosophy -->
    <div class="relative bg-gray-50">
      <section class="section">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-4">
              My Approach to Workplace Wellbeing
            </h2>
            <p class="text-xl text-primary-600 font-semibold text-center mb-12">
              Pioneering the UK's First Human+AI Wellbeing Audit Methodology
            </p>
            
            <div class="prose prose-lg mx-auto text-gray-600">
              <p class="lead">
                As the UK's premier <strong>workplace culture assessment</strong> specialist, I combine deep psychological 
                expertise with cutting-edge AI technology to deliver <strong>staff wellbeing surveys</strong> and 
                <strong>employee satisfaction assessments</strong> that transform organizational health across British businesses.
              </p>
              
              <p>
                Drawing from 17 years working with global brands like Brown-Forman, Edrington UK, Suntory, and 
                Cornish Lithium, I've developed the industry's most comprehensive <strong>workplace stress assessment</strong> 
                methodology. As both FRSPH and FCMI Fellow, I bring unparalleled expertise in <strong>ISO 45003 
                implementation</strong> and psychological safety management to every <strong>corporate wellbeing audit</strong>.
              </p>
              
              <p>
                My pioneering <strong>AI-powered workplace culture assessment</strong> goes beyond traditional surveys. 
                Using advanced pattern recognition trained on thousands of UK workplace scenarios, I identify the 
                hidden factors driving burnout, disengagement, and turnover. This data-driven approach to 
                <strong>employee mental health assessment</strong> delivers insights 10x faster than conventional 
                methods, with proven results including 40% reduction in stress-related absence.
              </p>
              
              <p>
                What truly differentiates my <strong>workplace wellbeing audit</strong> service is the seamless fusion 
                of human expertise and AI precision. While technology analyzes your <strong>staff wellbeing survey</strong> 
                data, my experience as IoD Ambassador and former executive ensures recommendations are both 
                compassionate and commercially viable. This unique methodology has helped Cornwall-based and 
                international companies achieve 25% improvement in <strong>employee satisfaction assessment</strong> scores.
              </p>
              
              <blockquote class="border-l-4 border-primary-500 pl-4 italic my-8">
                "What truly sets Craig apart is his extensive knowledge, continued deep empathy 
                and openness to speak from personal experience. His expertise in mental health 
                support is unrivalled."
                <cite class="block mt-2 text-sm not-italic">— Richard Sharpe, Director</cite>
              </blockquote>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-gray-50 to-white">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 3: Media & Publications -->
    <div class="relative bg-white">
      <section class="section">
        <div class="container">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-4">
              Thought Leadership & Media
            </h2>
            <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
              Regular contributor to workplace wellbeing discussions through podcasts, articles, and industry publications
            </p>
            
            <div class="grid lg:grid-cols-3 gap-8 mb-12">
              <!-- Recent Articles -->
              <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-6 border border-primary-100">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Recent Publications</h3>
                <ul class="space-y-3">
                  <li class="border-l-2 border-primary-400 pl-3">
                    <p class="font-medium text-gray-900 text-sm">"I Walk in Your Shoes": Executive Counsel</p>
                    <p class="text-xs text-gray-600">April 2025</p>
                  </li>
                  <li class="border-l-2 border-primary-400 pl-3">
                    <p class="font-medium text-gray-900 text-sm">Loneliness at the Top</p>
                    <p class="text-xs text-gray-600">January 2025</p>
                  </li>
                  <li class="border-l-2 border-primary-400 pl-3">
                    <p class="font-medium text-gray-900 text-sm">ROI vs VOI: Measuring Wellbeing</p>
                    <p class="text-xs text-gray-600">February 2025</p>
                  </li>
                </ul>
              </div>
              
              <!-- Podcast Appearances -->
              <div class="bg-gradient-to-br from-accent-50 to-white rounded-2xl p-6 border border-accent-100">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Podcast Features</h3>
                <ul class="space-y-3">
                  {mediaAppearances.filter(m => m.type === 'Podcast').map((media) => (
                    <li class="flex items-start gap-2">
                      <svg class="w-5 h-5 text-accent-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"></path>
                      </svg>
                      <div>
                        <p class="font-medium text-gray-900 text-sm">{media.title}</p>
                        <p class="text-xs text-gray-600">{media.description}</p>
                      </div>
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- Awards -->
              <div class="bg-gradient-to-br from-yellow-50 to-white rounded-2xl p-6 border border-yellow-200">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Recognition</h3>
                <ul class="space-y-3">
                  {awards.slice(2).map((award) => (
                    <li class="flex items-start gap-2">
                      <svg class="w-5 h-5 text-yellow-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                      <div>
                        <p class="font-medium text-gray-900 text-sm">{award.title}</p>
                        <p class="text-xs text-gray-600">{award.org} - {award.year}</p>
                      </div>
                    </li>
                  ))}
                  <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-yellow-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    <div>
                      <p class="font-medium text-gray-900 text-sm">This Can Happen Awards</p>
                      <p class="text-xs text-gray-600">Finalist - New Consultancy 2020</p>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-white to-gray-50">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 4: Client Testimonials -->
    <div class="relative bg-gray-50">
      <section class="section">
        <div class="container">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-12">
              What Industry Leaders Say
            </h2>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              <!-- Jeremy Wrathall - Cornish Lithium -->
              <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                <div class="flex gap-1 mb-4">
                  {[1,2,3,4,5].map(() => (
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  ))}
                </div>
                <p class="text-gray-600 mb-4 text-sm italic">
                  "Cornish Lithium values the work that you do with supporting our staff in difficult times... I have always found you a thoughtful and compassionate person and therefore the ideal counsellor in troubled times."
                </p>
                <p class="font-semibold text-gray-900">Jeremy Wrathall</p>
                <p class="text-sm text-gray-600">CEO, Cornish Lithium</p>
