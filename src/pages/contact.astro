---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
import PageHero from '../components/sections/PageHero.astro';
import CredentialsBar from '../components/sections/CredentialsBar.astro';
import ContactForm from '../components/ContactForm.astro';

const title = 'Contact Craig Fearn - Lighthouse Mentoring';
const description = 'Get in touch with Craig Fearn, workplace wellbeing expert. Book a consultation to discuss how our AI-powered wellbeing audits can transform your workplace culture.';
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <!-- Hero Section -->
    <div class="relative bg-white">
      <PageHero 
        title="Let's Transform Your"
        subtitle="Workplace Culture Together"
        description="Ready to create a thriving workplace where your people and business flourish? Get in touch to discuss how our AI-powered wellbeing audits can deliver measurable improvements in productivity, retention, and employee satisfaction."
        ctaText="Call Craig Direct"
        ctaLink="tel:07738419446"
        secondaryCtaText="Send Email"
        secondaryCtaLink="mailto:craig.fearn@lighthousementoring.co.uk"
        heroImage="/human-ai-handshake.png"
        heroImageAlt="Contact Craig Fearn - Workplace Wellbeing Expert"
      />
    </div>
    
    <!-- Credentials Bar (stands alone as a separator) -->
    <CredentialsBar />
    
    <!-- Section 1: Contact Options -->
    <div class="relative">
      <section class="section bg-white">
        <div class="container">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-4">
              Choose Your Preferred Way to Connect
            </h2>
            <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
              Whether you prefer a quick chat, detailed email, or scheduled consultation, 
              I'm here to discuss how we can improve your workplace wellbeing.
            </p>
            
            <div class="grid md:grid-cols-3 gap-8 mb-12">
              <!-- Phone -->
              <div class="bg-gradient-to-br from-primary-50 to-white rounded-2xl p-8 border border-primary-100 hover:shadow-xl transition-shadow">
                <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6 mx-auto">
                  <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 text-center mb-3">Call Direct</h3>
                <p class="text-gray-600 text-center mb-6">
                  For immediate discussion about your workplace wellbeing needs
                </p>
                <a href="tel:07738419446" class="block w-full text-center bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors">
                  07738 419446
                </a>
                <p class="text-sm text-gray-500 text-center mt-3">
                  Mon-Fri, 9am-5pm GMT
                </p>
              </div>
              
              <!-- Email -->
              <div class="bg-gradient-to-br from-accent-50 to-white rounded-2xl p-8 border border-accent-100 hover:shadow-xl transition-shadow">
                <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mb-6 mx-auto">
                  <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 text-center mb-3">Email Craig</h3>
                <p class="text-gray-600 text-center mb-6">
                  For detailed inquiries or to share your requirements
                </p>
                <a href="mailto:craig.fearn@lighthousementoring.co.uk" class="block w-full text-center bg-accent-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-accent-700 transition-colors break-all text-sm">
                  craig.fearn@lighthousementoring.co.uk
                </a>
                <p class="text-sm text-gray-500 text-center mt-3">
                  Response within 24 hours
                </p>
              </div>
              
              <!-- LinkedIn -->
              <div class="bg-gradient-to-br from-blue-50 to-white rounded-2xl p-8 border border-blue-100 hover:shadow-xl transition-shadow">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6 mx-auto">
                  <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 text-center mb-3">Connect on LinkedIn</h3>
                <p class="text-gray-600 text-center mb-6">
                  Join my network for insights and updates
                </p>
                <a href="https://www.linkedin.com/in/craigfearn/" target="_blank" rel="noopener" class="block w-full text-center bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                  View Profile
                </a>
                <p class="text-sm text-gray-500 text-center mt-3">
                  500+ connections
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-white to-gray-50">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 2: Contact Form -->
    <div class="relative bg-gray-50">
      <section class="section">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-4">
              Send a Message
            </h2>
            <p class="text-lg text-gray-600 text-center mb-12">
              Fill out the form below and I'll get back to you within 24 hours to discuss 
              how we can transform your workplace culture together.
            </p>
            
            <ContactForm />
          </div>
        </div>
      </section>
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-gray-50 to-white">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 3: What to Expect -->
    <div class="relative bg-white">
      <section class="section">
        <div class="container">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-12">
              What Happens Next?
            </h2>
            
            <div class="grid md:grid-cols-3 gap-8">
              <div class="text-center">
                <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-primary-600">1</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">Initial Consultation</h3>
                <p class="text-gray-600">
                  We'll discuss your current workplace challenges, goals, and how our wellbeing 
                  audit can help transform your culture.
                </p>
              </div>
              
              <div class="text-center">
                <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-primary-600">2</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">Tailored Proposal</h3>
                <p class="text-gray-600">
                  Based on our discussion, I'll create a customized assessment plan that addresses 
                  your specific needs and objectives.
                </p>
              </div>
              
              <div class="text-center">
                <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span class="text-2xl font-bold text-primary-600">3</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">Begin Transformation</h3>
                <p class="text-gray-600">
                  Once approved, we'll launch your wellbeing audit and start the journey to 
                  creating a thriving workplace culture.
                </p>
              </div>
            </div>
            
            <div class="mt-12 bg-gradient-to-r from-primary-50 to-accent-50 rounded-2xl p-8">
              <div class="text-center">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                  Ready to Get Started?
                </h3>
                <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
                  Don't wait to transform your workplace. Every day of delay costs your organization 
                  in lost productivity, engagement, and talent retention.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                  <a href="tel:07738419446" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg shadow-lg transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    Call Now: 07738 419446
                  </a>
                  <a href="#contact-form" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-primary-600 bg-white border-2 border-primary-600 hover:bg-primary-50 rounded-lg transition-colors">
                    Send Message Instead
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Final Divider before CTA -->
    <div class="relative py-8 bg-gradient-to-b from-white to-primary-600">
      <div class="container">
        <div class="w-24 h-1 bg-white/50 mx-auto"></div>
      </div>
    </div>
    
    <!-- Final CTA Section -->
    <section class="relative py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Every Day Matters
          </h2>
          <p class="text-lg text-primary-100 mb-8">
            Poor workplace wellbeing costs UK businesses £51 billion annually. 
            Don't let your organization be part of that statistic. 
            Take action today to create a healthier, more productive workplace.
          </p>
          <div class="bg-white/10 backdrop-blur rounded-2xl p-8 border border-white/20">
            <p class="text-2xl font-bold text-white mb-2">£4.70 ROI</p>
            <p class="text-primary-100 mb-6">for every £1 invested in workplace wellbeing</p>
            <a href="tel:07738419446" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-primary-900 bg-white hover:bg-gray-100 rounded-md transition-colors duration-200 shadow-lg">
              Start Your Transformation Today
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>