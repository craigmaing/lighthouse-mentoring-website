---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/sections/Header.astro';
import PageHero from '../components/sections/PageHero.astro';
import CredentialsBar from '../components/sections/CredentialsBar.astro';
import ProblemSection from '../components/sections/ProblemSection.astro';
import SolutionSection from '../components/sections/SolutionSection.astro';
import ProcessOverview from '../components/sections/ProcessOverview.astro';
import WhyChooseLighthouse from '../components/sections/WhyChooseLighthouse.astro';
import ServiceComparison from '../components/sections/ServiceComparison.astro';
import ROIStatistics from '../components/sections/ROIStatistics.astro';
import LinkedInTestimonials from '../components/sections/LinkedInTestimonials.astro';
import FAQSection from '../components/sections/FAQSection.astro';
import Footer from '../components/sections/Footer.astro';

const title = 'Workplace Wellbeing Audit & Assessment Services | Lighthouse Mentoring';
const description = 'Expert workplace wellbeing audits using AI-powered analysis. Get actionable insights to improve employee wellness, engagement, and productivity. Transform your workplace culture with data-driven assessments.';
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <!-- Hero Section -->
    <div class="relative bg-white">
      <PageHero 
        title="Transform Your Workplace with"
        subtitle="Data-Driven Wellbeing Audits"
        description="Discover how our AI-powered workplace wellbeing assessment helps UK businesses improve employee wellness and productivity. Our comprehensive wellbeing audit process identifies hidden costs and delivers actionable insights with proven £4.70 ROI for every £1 invested."
        ctaText="Start Your Assessment"
        ctaLink="#assessment"
        secondaryCtaText="See How It Works"
        secondaryCtaLink="#solution"
        heroImage="/ai-brain-technology.png"
        heroImageAlt="Craig Fearn FRSPH, Fellow CMI - Workplace Wellbeing Expert"
      />
    </div>
    
    <!-- Credentials Bar (stands alone as a separator) -->
    <CredentialsBar />
    
    <!-- Section 1: The Problem -->
    <div class="relative">
      <ProblemSection />
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-gray-50 to-white">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 2: Our Solution -->
    <div class="relative">
      <SolutionSection />
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-white to-gray-50">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 2.5: Process Overview -->
    <div class="relative bg-gray-50">
      <ProcessOverview />
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-gray-50 to-white">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 3: Service Packages Overview -->
    <div class="relative">
      <ServiceComparison />
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-white to-gray-50">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 4: Proven Results -->
    <div class="relative bg-gray-50">
      <ROIStatistics />
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-gray-50 to-white">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 5: Why Choose Us -->
    <div class="relative">
      <WhyChooseLighthouse />
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-white to-gray-50">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 6: Social Proof -->
    <div class="relative bg-gray-50">
      <LinkedInTestimonials />
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-gray-50 to-white">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 7: FAQ -->
    <div class="relative bg-white">
      <FAQSection />
    </div>
    
    <!-- Final Divider before CTA -->
    <div class="relative py-8 bg-gradient-to-b from-white to-primary-600">
      <div class="container">
        <div class="w-24 h-1 bg-white/50 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 8: Final CTA Section -->
    <section id="assessment" class="relative py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Ready to Transform Your Workplace with a Wellbeing Audit?
          </h2>
          <p class="text-lg text-primary-100 mb-8">
            Join UK businesses achieving £4.70 ROI with our AI-powered workplace wellbeing assessment. 
            Our comprehensive employee wellness audit identifies hidden costs and delivers actionable insights 
            to improve productivity, retention, and workplace culture.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-primary-900 bg-white hover:bg-gray-100 rounded-md transition-colors duration-200 shadow-lg">
              Book Your Assessment
            </a>
            <a href="/about" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-transparent border-2 border-white hover:bg-white hover:text-primary-900 rounded-md transition-colors duration-200">
              Learn About Craig
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>