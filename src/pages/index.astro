---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/sections/Header.astro';
import PageHero from '../components/sections/PageHero.astro';
import CredentialsBar from '../components/sections/CredentialsBar.astro';
import ProblemSection from '../components/sections/ProblemSection.astro';
import SolutionSection from '../components/sections/SolutionSection.astro';
import ProcessOverview from '../components/sections/ProcessOverview.astro';
import WhyChooseLighthouse from '../components/sections/WhyChooseLighthouse.astro';
import ServiceComparison from '../components/sections/ServiceComparison.astro';
import ROIStatistics from '../components/sections/ROIStatistics.astro';
import LinkedInTestimonials from '../components/sections/LinkedInTestimonials.astro';
import FAQSection from '../components/sections/FAQSection.astro';
import Footer from '../components/sections/Footer.astro';
import SectionDivider from '../components/ui/SectionDivider.astro';

const title = 'Workplace Wellbeing Audit UK | Mental Health in the Workplace Assessment | Craig Fearn FRSPH';
const description = 'Professional workplace culture assessment and employee satisfaction measurement by Craig Fearn FRSPH. Expert workplace wellbeing audits addressing mental health in the workplace. Transform your organisation with data-driven insights.';
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <!-- Hero Section -->
    <div class="relative bg-white">
      <PageHero 
        title="Transform Your Workplace with a"
        subtitle="Professional Wellbeing Audit"
        description="Mental health in the workplace costs UK businesses £51 billion annually. Our comprehensive workplace wellbeing audit and employee satisfaction measurement identify the real problems affecting your team. Get actionable insights from our workplace culture assessment that deliver proven ROI."
        ctaText="Get Your Free Assessment"
        ctaLink="#assessment"
        secondaryCtaText="See How It Works"
        secondaryCtaLink="#solution"
        heroImage="/ai-brain-technology.png"
        heroImageAlt="Craig Fearn FRSPH - Workplace Wellbeing Expert"
      />
    </div>
    
    <!-- Credentials Bar (stands alone as a separator) -->
    <CredentialsBar />
    
    <!-- Section 1: The Problem -->
    <div class="relative bg-gradient-to-br from-gray-50 via-white to-primary-50/20">
      <ProblemSection />
    </div>
    
    <SectionDivider variant="wave" color="text-primary-100" flipped={true} />
    
    <!-- Section 2: Our Solution -->
    <div class="relative bg-white">
      <SolutionSection />
    </div>
    
    <SectionDivider variant="gradient" />
    
    <!-- Section 2.5: Process Overview -->
    <div class="relative bg-gradient-to-br from-secondary-50/20 via-white to-primary-50/20">
      <ProcessOverview />
    </div>
    
    <SectionDivider variant="curve" color="text-secondary-100" />
    
    <!-- Section 3: Service Packages Overview -->
    <div class="relative bg-white">
      <ServiceComparison />
    </div>
    
    <SectionDivider variant="zigzag" color="text-primary-200" />
    
    <!-- Section 4: Proven Results -->
    <div class="relative bg-gradient-to-br from-primary-50/30 via-white to-secondary-50/30">
      <ROIStatistics />
    </div>
    
    <SectionDivider variant="wave" color="text-secondary-100" flipped={false} />
    
    <!-- Section 5: Why Choose Us -->
    <div class="relative bg-white">
      <WhyChooseLighthouse />
    </div>
    
    <SectionDivider variant="dots" />
    
    <!-- Section 6: Social Proof -->
    <div class="relative bg-gradient-to-br from-gray-50 via-white to-gray-50">
      <LinkedInTestimonials />
    </div>
    
    <SectionDivider variant="curve" color="text-gray-300" flipped={true} />
    
    <!-- Section 7: FAQ -->
    <div class="relative bg-white">
      <FAQSection />
    </div>
    
    <SectionDivider variant="gradient" />
    
    <!-- Section 8: Final CTA Section -->
    <section id="assessment" class="relative py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Transform Mental Health in Your Workplace Today
          </h2>
          <p class="text-lg text-primary-100 mb-8">
            Get your free workplace wellbeing assessment and discover how our workplace culture assessment 
            methodology helps UK businesses improve employee satisfaction measurement scores while delivering 
            £4.70 ROI for every £1 invested.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-primary-900 bg-white hover:bg-gray-100 rounded-md transition-colors duration-200 shadow-lg">
              Book Your Free Assessment
            </a>
            <a href="/services" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-transparent border-2 border-white hover:bg-white hover:text-primary-900 rounded-md transition-colors duration-200">
              Explore Our Services
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>