---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
import PageHero from '../components/sections/PageHero.astro';

const title = 'Workplace Wellbeing Blog | Latest Insights & Resources';
const description = 'Expert insights on workplace wellbeing, employee mental health, and organisational culture. Practical tips and strategies from Craig Fearn FRSPH.';

// Placeholder blog posts - in production, these would come from content collections
const blogPosts = [
  {
    title: "The True Cost of Poor Workplace Wellbeing in 2025",
    excerpt: "UK businesses lose £45 billion annually to poor mental health. Learn how to calculate the real cost to your organisation and what you can do about it.",
    date: "January 15, 2025",
    category: "Research",
    readTime: "5 min read",
    slug: "cost-poor-workplace-wellbeing-2025"
  },
  {
    title: "How to Spot Employee Burnout Before It's Too Late",
    excerpt: "Recognise the early warning signs of burnout in your team and learn evidence-based strategies to prevent it from impacting your organisation.",
    date: "January 8, 2025",
    category: "Mental Health",
    readTime: "4 min read",
    slug: "spot-employee-burnout-early"
  },
  {
    title: "The ROI of Wellbeing: A CFO's Guide",
    excerpt: "Discover why investing in employee wellbeing delivers £4.70 for every £1 spent, with real-world examples and calculation methods.",
    date: "January 2, 2025",
    category: "Business Case",
    readTime: "7 min read",
    slug: "roi-wellbeing-cfo-guide"
  },
  {
    title: "Small Business Wellbeing on a Budget",
    excerpt: "Practical, cost-effective strategies for SMEs to improve employee wellbeing without breaking the bank. Perfect for teams of 10-50.",
    date: "December 28, 2024",
    category: "SME Focus",
    readTime: "6 min read",
    slug: "small-business-wellbeing-budget"
  }
];

const categories = ["All", "Research", "Mental Health", "Business Case", "SME Focus", "Case Studies"];
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <PageHero 
      title="Workplace Wellbeing Insights"
      subtitle="Expert Resources & Articles"
      description="Evidence-based insights and practical strategies for improving employee wellbeing, mental health, and organisational culture."
      ctaText="Subscribe to Updates"
      ctaLink="#subscribe"
      secondaryCtaText="Browse Articles"
      secondaryCtaLink="#articles"
      heroImage="/Gemini_Generated_Image_qn1gyeqn1gyeqn1g.png"
      heroImageAlt="Workplace Wellbeing Insights and Resources"
    />

    <!-- Blog Articles Section -->
    <section id="articles" class="py-20 bg-white">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <!-- Category Filter -->
          <div class="flex flex-wrap gap-2 justify-center mb-12">
            {categories.map((category) => (
              <button class="px-4 py-2 rounded-full border border-gray-300 hover:border-primary-500 hover:bg-primary-50 transition-colors text-sm font-medium">
                {category}
              </button>
            ))}
          </div>

          <!-- Blog Grid -->
          <div class="grid md:grid-cols-2 gap-8 mb-12">
            {blogPosts.map((post) => (
              <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow overflow-hidden group">
                <div class="aspect-video bg-gradient-to-br from-primary-100 to-secondary-100"></div>
                <div class="p-6">
                  <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                    <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded-full text-xs font-medium">
                      {post.category}
                    </span>
                    <span>{post.date}</span>
                    <span>{post.readTime}</span>
                  </div>
                  <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                    {post.title}
                  </h2>
                  <p class="text-gray-600 mb-4 line-clamp-2">
                    {post.excerpt}
                  </p>
                  <a href={`/blog/${post.slug}`} class="text-primary-600 font-medium hover:text-primary-700 flex items-center gap-2">
                    Read More
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>

          <!-- Load More -->
          <div class="text-center">
            <button class="btn-outline">
              Load More Articles
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section id="subscribe" class="py-16 bg-gradient-to-br from-primary-50 to-secondary-50">
      <div class="container">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
            Stay Updated on Workplace Wellbeing
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            Get monthly insights, research updates, and practical tips delivered to your inbox.
          </p>
          <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="Your email address"
              class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent"
              required
            />
            <button type="submit" class="btn-primary">
              Subscribe
            </button>
          </form>
          <p class="text-sm text-gray-500 mt-4">
            No spam, unsubscribe anytime. Read our privacy policy.
          </p>
        </div>
      </div>
    </section>

  </main>
  <Footer />
</BaseLayout>