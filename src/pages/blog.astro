---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
import PageHero from '../components/sections/PageHero.astro';
import CredentialsBar from '../components/sections/CredentialsBar.astro';

const title = 'Workplace Wellbeing Blog | Latest Insights & Resources';
const description = 'Expert insights on workplace wellbeing, employee mental health, and organisational culture. Practical tips and strategies from Craig Fearn FRSPH, Fellow CMI.';

// Placeholder blog posts - in production, these would come from content collections
const blogPosts = [
  {
    title: "The True Cost of Poor Workplace Wellbeing in 2025",
    excerpt: "UK businesses lose £51 billion annually to poor mental health. Learn how to calculate the real cost to your organisation and what you can do about it.",
    date: "January 15, 2025",
    category: "Research",
    readTime: "5 min read",
    slug: "cost-poor-workplace-wellbeing-2025"
  },
  {
    title: "How to Spot Employee Burnout Before It's Too Late",
    excerpt: "Recognise the early warning signs of burnout in your team and learn evidence-based strategies to prevent it from impacting your organisation.",
    date: "January 8, 2025",
    category: "Mental Health",
    readTime: "4 min read",
    slug: "spot-employee-burnout-early"
  },
  {
    title: "The ROI of Wellbeing: A CFO's Guide",
    excerpt: "Discover why investing in employee wellbeing delivers £4.70 for every £1 spent, with real-world examples and calculation methods.",
    date: "January 2, 2025",
    category: "Business Case",
    readTime: "7 min read",
    slug: "roi-wellbeing-cfo-guide"
  },
  {
    title: "Small Business Wellbeing on a Budget",
    excerpt: "Practical, cost-effective strategies for SMEs to improve employee wellbeing without breaking the bank. Perfect for teams of 10-50.",
    date: "December 28, 2024",
    category: "SME Focus",
    readTime: "6 min read",
    slug: "small-business-wellbeing-budget"
  },
  {
    title: "ISO 45003: What SMEs Need to Know",
    excerpt: "A practical guide to the psychological health and safety standard - what it means for your business and how to implement it effectively.",
    date: "December 20, 2024",
    category: "Compliance",
    readTime: "8 min read",
    slug: "iso-45003-sme-guide"
  },
  {
    title: "Creating Psychological Safety in Remote Teams",
    excerpt: "How to build trust and openness in distributed teams, with practical strategies that work for hybrid and fully remote organisations.",
    date: "December 15, 2024",
    category: "Remote Work",
    readTime: "6 min read",
    slug: "psychological-safety-remote-teams"
  }
];

const categories = ["All", "Research", "Mental Health", "Business Case", "SME Focus", "Compliance", "Remote Work"];

const featuredResources = [
  {
    title: "Wellbeing Audit Checklist",
    description: "Free downloadable checklist to assess your current workplace wellbeing initiatives",
    type: "PDF Guide"
  },
  {
    title: "ROI Calculator",
    description: "Calculate the potential return on investment from workplace wellbeing improvements",
    type: "Interactive Tool"
  },
  {
    title: "Manager's Mental Health Toolkit",
    description: "Essential resources for managers to support team mental health and wellbeing",
    type: "Resource Pack"
  }
];
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <!-- Hero Section -->
    <div class="relative bg-white">
      <PageHero 
        title="Workplace Wellbeing Insights"
        subtitle="Expert Resources & Articles"
        description="Evidence-based insights and practical strategies for improving employee wellbeing, mental health, and organisational culture. Learn from 17+ years of experience transforming workplaces across the UK."
        ctaText="Subscribe to Updates"
        ctaLink="#subscribe"
        secondaryCtaText="Browse Articles"
        secondaryCtaLink="#articles"
        heroImage="/Gemini_Generated_Image_qn1gyeqn1gyeqn1g.png"
        heroImageAlt="Workplace Wellbeing Insights and Resources"
      />
    </div>
    
    <!-- Credentials Bar (stands alone as a separator) -->
    <CredentialsBar />
    
    <!-- Section 1: Featured Articles -->
    <div class="relative">
      <section id="articles" class="section bg-white">
        <div class="container">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-4">
              Latest Articles & Insights
            </h2>
            <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
              Practical, evidence-based content to help you create a thriving workplace culture
            </p>
            
            <!-- Category Filter -->
            <div class="flex flex-wrap gap-2 justify-center mb-12">
              {categories.map((category) => (
                <button class="px-4 py-2 rounded-full border border-gray-300 hover:border-primary-500 hover:bg-primary-50 transition-colors text-sm font-medium">
                  {category}
                </button>
              ))}
            </div>

            <!-- Blog Grid -->
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
              {blogPosts.map((post) => (
                <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow overflow-hidden group">
                  <div class="aspect-video bg-gradient-to-br from-primary-100 to-secondary-100"></div>
                  <div class="p-6">
                    <div class="flex items-center gap-4 text-sm text-gray-500 mb-3">
                      <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded-full text-xs font-medium">
                        {post.category}
                      </span>
                      <span>{post.readTime}</span>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors line-clamp-2">
                      {post.title}
                    </h3>
                    <p class="text-sm text-gray-600 mb-3 line-clamp-3">
                      {post.excerpt}
                    </p>
                    <div class="flex items-center justify-between">
                      <span class="text-xs text-gray-500">{post.date}</span>
                      <a href={`/blog/${post.slug}`} class="text-primary-600 font-medium hover:text-primary-700 text-sm flex items-center gap-1">
                        Read More
                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>

            <!-- Load More -->
            <div class="text-center">
              <button class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-primary-600 bg-white border-2 border-primary-600 hover:bg-primary-50 rounded-lg transition-colors">
                Load More Articles
              </button>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-white to-gray-50">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 2: Resources -->
    <div class="relative bg-gray-50">
      <section class="section">
        <div class="container">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-4">
              Free Resources & Tools
            </h2>
            <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
              Practical resources to help you assess and improve workplace wellbeing in your organisation
            </p>
            
            <div class="grid md:grid-cols-3 gap-8">
              {featuredResources.map((resource) => (
                <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                  <span class="text-xs font-semibold text-primary-600 uppercase tracking-wider">{resource.type}</span>
                  <h3 class="text-lg font-bold text-gray-900 mt-2 mb-2">{resource.title}</h3>
                  <p class="text-sm text-gray-600 mb-4">{resource.description}</p>
                  <button class="text-primary-600 font-medium text-sm hover:text-primary-700 flex items-center gap-1">
                    Download Free
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </button>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Section Divider -->
    <div class="relative py-8 bg-gradient-to-b from-gray-50 to-white">
      <div class="container">
        <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-accent-400 mx-auto"></div>
      </div>
    </div>
    
    <!-- Section 3: Newsletter Signup -->
    <div class="relative bg-white">
      <section id="subscribe" class="section">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <div class="bg-gradient-to-br from-primary-50 to-accent-50 rounded-2xl p-8 md:p-12">
              <div class="text-center">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                  Stay Ahead of Workplace Wellbeing Trends
                </h2>
                <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
                  Get monthly insights, research updates, and practical tips delivered to your inbox. 
                  Join 500+ leaders transforming their workplace cultures.
                </p>
                
                <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto mb-6">
                  <input 
                    type="email" 
                    placeholder="Your email address"
                    class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                    required
                  />
                  <button type="submit" class="px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors">
                    Subscribe
                  </button>
                </form>
                
                <p class="text-sm text-gray-500">
                  No spam, unsubscribe anytime. By subscribing, you agree to our privacy policy.
                </p>
                
                <div class="mt-8 pt-8 border-t border-gray-200">
                  <p class="text-sm font-semibold text-gray-900 mb-3">What subscribers are saying:</p>
                  <div class="flex items-center justify-center gap-1 mb-2">
                    {[1,2,3,4,5].map(() => (
                      <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    ))}
                  </div>
                  <p class="text-sm text-gray-600 italic">
                    "Craig's insights have been invaluable in shaping our wellbeing strategy. Practical, evidence-based, and always relevant."
                  </p>
                  <p class="text-sm text-gray-500 mt-2">— Sarah J., HR Director</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    
    <!-- Final Divider before CTA -->
    <div class="relative py-8 bg-gradient-to-b from-white to-primary-600">
      <div class="container">
        <div class="w-24 h-1 bg-white/50 mx-auto"></div>
      </div>
    </div>
    
    <!-- Final CTA Section -->
    <section class="relative py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Ready to Transform Your Workplace?
          </h2>
          <p class="text-lg text-primary-100 mb-8">
            Don't just read about workplace wellbeing—take action. 
            Discover how our AI-powered wellbeing audits can deliver measurable improvements for your organisation.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-primary-900 bg-white hover:bg-gray-100 rounded-md transition-colors duration-200 shadow-lg">
              Book Your Assessment
            </a>
            <a href="/about" class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-transparent border-2 border-white hover:bg-white hover:text-primary-900 rounded-md transition-colors duration-200">
              Learn About Our Approach
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>